#include <stdio.h>
#define SIZE 10   // hash table size (m)

int hashTable[SIZE];

// Initialize hash table
void init() {
    for(int i = 0; i < SIZE; i++)
        hashTable[i] = -1;  // -1 means empty
}

// Insert key into hash table
void insert(int key) {
    int index = key % SIZE;       // hash function H(K) = K mod m
    int i = index;

    while(hashTable[i] != -1) {   // collision, linear probing
        i = (i + 1) % SIZE;
        if(i == index) {          // table full
            printf("Hash Table Full! Cannot insert %d\n", key);
            return;
        }
    }

    hashTable[i] = key;
    printf("Inserted %d at index %d\n", key, i);
}

// Display hash table
void display() {
    printf("\nHash Table:\n");
    for(int i = 0; i < SIZE; i++) {
        if(hashTable[i] == -1)
            printf("%d : ---\n", i);
        else
            printf("%d : %d\n", i, hashTable[i]);
    }
}

int main() {
    int n, key;

    init();

    printf("Enter number of employee keys to insert: ");
    scanf("%d", &n);

    for(int i = 0; i < n; i++) {
        printf("Enter 4-digit employee key: ");
        scanf("%d", &key);
        insert(key);
    }

    display();
    return 0;
}
