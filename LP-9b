#include <stdio.h>

int visited[20];

void dfs(int a[20][20], int n, int v) {
    visited[v] = 1;
    for(int i = 1; i <= n; i++) {
        if(a[v][i] == 1 && visited[i] == 0)
            dfs(a, n, i);
    }
}
int main() {
    int a[20][20], n, i, j, start;

    printf("Enter total vertices: ");
    scanf("%d", &n);

    printf("Enter adjacency matrix:\n");
    for(i = 1; i <= n; i++)
        for(j = 1; j <= n; j++)
            scanf("%d", &a[i][j]);

    printf("Enter starting vertex: ");
    scanf("%d", &start);

    for(i = 1; i <= n; i++) visited[i] = 0;

    dfs(a, n, start);

    // Check Connectivity
    for(i = 1; i <= n; i++) {
        if(visited[i] == 0) {
            printf("\nGraph is NOT Connected\n");
            return 0;
        }
    }

    printf("\nGraph is Connected\n");
    return 0;
}
