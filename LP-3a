#include <stdio.h>
#define MAX 5  
int queue[MAX];
int front = -1, rear = -1;

void insert() {
    int x;
    if (rear == MAX - 1) {
        printf("\nQueue Overflow! Cannot insert.\n");
        return;
    }
    printf("\nEnter element to insert: ");
    scanf("%d", &x);

    if (front == -1) front = 0;  // first element

    queue[++rear] = x;
    printf("%d inserted.\n", x);
}

void delete() {
    if (front == -1 || front > rear) {
        printf("\nQueue Empty! Nothing to delete.\n");
        return;
    }
    printf("\n%d deleted.\n", queue[front++]);
}

void display() {
    int i;
    if (front == -1 || front > rear) {
        printf("\nQueue is Empty!\n");
        return;
    }
    printf("\nQueue Elements: ");
    for (i = front; i <= rear; i++) {
        printf("%d ", queue[i]);
    }
    printf("\n");
}

int main() {
    int choice;
    do {
        printf("\n----- Queue Menu -----");
        printf("\n1. Insert");
        printf("\n2. Delete");
        printf("\n3. Display");
        printf("\n4. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1: insert(); break;
            case 2: delete(); break;
            case 3: display(); break;
            case 4: printf("\nExiting...\n"); break;
            default: printf("\nInvalid Choice!\n");
        }
    } while(choice != 4);
    return 0;
}
