#include <stdio.h>
#include <ctype.h>

#define MAX 50
char stack[MAX];
int top = -1;

void push(char x) {
    stack[++top] = x;
}

char pop() {
    return stack[top--];
}

int precedence(char x) {
    if (x == '+' || x == '-') return 1;
    if (x == '*' || x == '/') return 2;
    return 0;
}

int main() {
    char infix[MAX], postfix[MAX], ch;
    int i = 0, j = 0;

    printf("Enter a valid parenthesized infix expression: ");
    scanf("%s", infix);

    while((ch = infix[i++]) != '\0') {
        if (isalnum(ch))      // operand â†’ directly to postfix
            postfix[j++] = ch;
        else if (ch == '(')
            push(ch);
        else if (ch == ')') {
            while (stack[top] != '(')
                postfix[j++] = pop();
            pop();  // remove '('
        }
        else {  // operator
            while (top != -1 && precedence(stack[top]) >= precedence(ch))
                postfix[j++] = pop();
            push(ch);
        }
    }

    while (top != -1)  // pop remaining operators
        postfix[j++] = pop();

    postfix[j] = '\0';
    printf("Postfix Expression: %s", postfix);

    return 0;
}
