#include <stdio.h>

int queue[20], front = -1, rear = -1;
int visited[20];

void bfs(int a[20][20], int n, int start) {
    int i;
    queue[++rear] = start;
    visited[start] = 1;

    while(front < rear) {
        start = queue[++front];
        printf("%d ", start);

        for(i = 1; i <= n; i++) {
            if(a[start][i] == 1 && visited[i] == 0) {
                queue[++rear] = i;
                visited[i] = 1;
            }
        }
    }
}

int main() {
    int a[20][20], n, i, j, start;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter adjacency matrix:\n");
    for(i = 1; i <= n; i++)
        for(j = 1; j <= n; j++)
            scanf("%d", &a[i][j]);

    printf("Enter starting vertex: ");
    scanf("%d", &start);

    for(i = 1; i <= n; i++) visited[i] = 0;

    printf("BFS Traversal: ");
    bfs(a, n, start);

    return 0;
}
