#include <stdio.h>
#define MAX 5   // size of circular queue

int queue[MAX];
int front = -1, rear = -1;

void insert() {
    int x;
    if ((front == 0 && rear == MAX - 1) || (rear + 1) % MAX == front) {
        printf("\nQueue Overflow! Cannot insert.\n");
        return;
    }
    printf("\nEnter element to insert: ");
    scanf("%d", &x);

    if (front == -1 && rear == -1) {
        front = rear = 0;
    } else {
        rear = (rear + 1) % MAX;
    }

    queue[rear] = x;
    printf("%d inserted.\n", x);
}

void delete() {
    if (front == -1) {
        printf("\nQueue Empty! Nothing to delete.\n");
        return;
    }
    printf("\n%d deleted.\n", queue[front]);

    if (front == rear) {
        front = rear = -1;   // queue becomes empty
    } else {
        front = (front + 1) % MAX;
    }
}

void display() {
    int i;
    if (front == -1) {
        printf("\nQueue is Empty!\n");
        return;
    }
    printf("\nQueue Elements: ");
    for (i = front; i != rear; i = (i + 1) % MAX) {
        printf("%d ", queue[i]);
    }
    printf("%d\n", queue[rear]);
}

int main() {
    int choice;
    do {
        printf("\n----- Circular Queue Menu -----");
        printf("\n1. Insert");
        printf("\n2. Delete");
        printf("\n3. Display");
        printf("\n4. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1: insert(); break;
            case 2: delete(); break;
            case 3: display(); break;
            case 4: printf("\nExiting...\n"); break;
            default: printf("\nInvalid Choice!\n");
        }
    } while(choice != 4);
    return 0;
}
